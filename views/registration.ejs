<!--Registracijska Forma-->

<section id="loginForma" class="min-vh-90  align-items-center text-center d-flex">
    <div class="container mt-5">
        <div class="row align-items-center text-center">
            <div class="col-5 me-auto ms-auto">
                <div class="container p-4 border loginForma2">
                    <form id="registerForm" class="mx-auto" >
                        <h4 class="text-center">Registruj se</h4>
                        <h6>Dobrodošli !</h6>
                        <div class="row mb-3 mt-3">
                            <div class="col">
                                <label for="ime" class="form-label "> Ime</label>
                                <input type="text" class="form-control input-polje" id="ime" name = "ime" required>
                            </div>
                            <div class="col">
                                <label for="prezime" class="form-label "> Prezime</label>
                                <input type="text" class="form-control input-polje" id="prezime" name="prezime" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control input-polje" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="username" class="form-label">Korisničko ime</label>
                            <input type="text" class="form-control input-polje" id="username" name="username" required>
                        </div>
                        <div class="row mb-3 mt-3">
                            <div class="col">
                                <label for="password" class="form-label "> Lozinka</label>
                                <input type="password" class="form-control input-polje" id="password" name="password" required>
                            </div>
                            <div class="col">
                                <label for="confirmPassword" class="form-label "> Potvrdi lozinku</label>
                                <input type="password" class="form-control input-polje" id="confirmPassword" name="confirmPassword" required>
                            </div>
                            <div class="mb-3">
                                <label for="grad" class="form-label">Grad</label>
                                <input type="text" class="form-control input-polje" id="grad" name="grad" required>
                            </div>
                            <div class="mb-3">
                                <label for="strucna_sprema" class="form-label">Stručna sprema</label>
                                <input type="text" class="form-control input-polje" id="strucna_sprema" name="strucna_sprema" required>
                            </div>
                            <div class="mb-3">
                                <label for="god_radno_iskustvo" class="form-label">Radno iskustvo u struci (godina)</label>
                                <input type="number" class="form-control input-polje" id="god_radno_iskustvo" name="god_radno_iskustvo" required min="0">
                            </div>
                        </div>
                        <h6 class="mt-3">Već imaš profil?<a class="text-blue ms-2 zaboravljena" href="/login">Prijavi se</a></h6>
                        <div id="message" class="mt-3"></div>

                        <button type="submit" class="btn btn-primary mt-3">Registruj se</button>
                    </form>
                </div>
            </div>
        </div>

    </div>

</section>


