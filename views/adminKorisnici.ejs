<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

</head>
<body style="background-color: #f4f5f7;">
<!--NAVBAR-->
<%- include('components/adminNav') %>
<section class="pt-4 padding-kartice">
    <div class="container">
        <h4 class="text-center">Pregled korisnika</h4>
        <hr>
        <div class="row justify-content-center gy-4">
            <% korisnici.forEach(korisnik => { %>
                <div class="col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><%= korisnik.ime %> <%= korisnik.prezime %></h5>
                            <h6 class="card-subtitle mb-2 text-muted"><%= korisnik.username %>, <%= korisnik.grad %></h6>
                            <p class="card-text"><%= korisnik.strucna_sprema %></p>
                            <a href="#" class="card-link">Broj konkursa: <%= korisnik.broj_prijavljenih_konkursa %></a>
                            <a href="/admin/korisnik/<%= korisnik.id %>" class="card-link mt-3">Pogledaj profil</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>



<!--Futer-->

<!-- Footer -->
<%- include('components/footer') %>



<script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>


</body>
</html>