<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

</head>
<body style="background-color: #f4f5f7;">
<!--NAVBAR-->
<%- include('components/adminNav') %>
<h1>Statistika o Konkursima</h1>
    <div>
        <canvas id="myChart" width="1600" height="400"></canvas>
    </div>

<% korisnikStatistika.forEach((korisnik) => { %>
    <div>
        <h3>Status prijava za korisnika <%= korisnik.imePrezime %></h3>
        <canvas id="statusChart_<%= korisnik.id%>"></canvas>
    </div>
<% }) %>

<!--Futer-->

<!-- Footer -->

<!-- Footer -->
<%- include('components/footer') %>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    const statistika = <%- statistika %>;
    const korisnikStatistika = <%- JSON.stringify(korisnikStatistika) %>;


    console.log('Statistika:', statistika);
    console.log('Korisnik Statistika:', korisnikStatistika);


    const ctx = document.getElementById('myChart');

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: statistika.map(item => item.naziv),
            datasets: [{
                label: 'Broj prijava',
                data: statistika.map(item => item.brojPrijava),
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });


    korisnikStatistika.forEach((korisnik) => {
        const ctx = document.getElementById(`statusChart_${korisnik.id}`);

        new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Aktivno', 'UÅ¾i Krug', 'Odbijeno'],
                datasets: [{
                    data: [
                        korisnik.statusPrijava.aktivno,
                        korisnik.statusPrijava.uziKrug,
                        korisnik.statusPrijava.odbijeno
                    ],
                    backgroundColor: [
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(255, 0, 0, 0.2)'
                    ],
                    borderColor: [
                        'rgba(75, 192, 192, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(255, 0, 0, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'top' },
                    tooltip: {
                        callbacks: {
                            label: function(tooltipItem) {
                                return tooltipItem.label + ': ' + tooltipItem.raw + ' prijava';
                            }
                        }
                    }
                }
            }
        });
    });


</script>
<script src="	https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>